// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
    id Int @id @default(autoincrement())
    name String
    email String
    password String
    @@map("users")
}

model Anime {
   id Int @id @default(autoincrement())
   kitsu_id String? @unique
   slug String
   canonical_title String
   titles String? @db.LongText
   synopsis String? @db.Text
   description String? @db.Text
   season Season?
   season_year String? @db.VarChar(4)
   date_begin DateTime? @db.Date
   date_end DateTime? @db.Date
   rating_average Float? @db.Double
   rating_rank Int? @db.UnsignedInt
   popularity_count Float? @db.Double
   popularity_rank Int? @db.UnsignedInt
   type Type?
   poster String? @db.LongText
   cover String? @db.LongText
   episode_count Int? @db.UnsignedInt
   episode_length Int? @db.UnsignedInt
   status Status @default(unreleased)
   created_at DateTime @default(now())
   @@map("animes")
}

enum Season {
    Winter
    Springs
    Summer
    Fall
    none
}

enum Type {
    TV
    Movie
    OAV
    ONA
    OVA
    special
    music
}

enum Status {
    finished
    current
    unreleased
    tba
    upcoming
}